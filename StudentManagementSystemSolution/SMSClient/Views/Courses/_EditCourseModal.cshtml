@model SMSClient.Model.Course


<div class="modal fade" id="courseEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        @Html.HiddenFor(m => m.CourseCode)
        <div class="modal-content">
            <form id="editCourseForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Update a Department</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row mt-2">
                        <div class="col-12">
                            @* <input asp-for="Id" class="form-control" id="userId" disabled />*@
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <label>Full Name</label>
                            <input asp-for="ShortName" class="form-control" id="shortName" type="text" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="ShortName"></span>
                        </div>
                        <div class="col-6">
                            <label>User Name</label>
                            <input asp-for="LongName" class="form-control" id="longName" type="text" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="LongName"></span>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-6" id="classContainer">
                            <label>Class</label>
                            <select id="selectedClass" class="form-select form-select-lg mb-3">

                            </select>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="saveEditCourse" type="submit" class="btn btn-primary">Save changes</button>
                </div>

            </form>

        </div>
    </div>

</div>


@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script>
    $.ajax({
        type: "GET",
        data: $("#CourseCode").val(),
        url: '@Url.Action("GetClassesDropdown", "Courses")',
        success: function(response) {
            $("#selectedClass").html(response);
            $("#selectedClass").val(@Model.ClassId);
        },
        error: function (e) {
            $.notify(e.message)
        }
    })

    $("#editCourseForm").on('submit', function (e) {
        e.preventDefault();
        $.validator.unobtrusive.parse('#editCourseForm');
        $("#editCourseForm").validate();

        if (!$("#editCourseForm").valid()) {
            $.notify("Not valid");
            return;
        }
        $("#saveEditCourse").prop("disabled", true);
        $("#saveEditCourse").html(
            `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...`
        );
        let formData = {
            courseCode: $("#CourseCode").val(),
            shortName: $("#shortName").val(),
            longName: $("#longName").val(),
            classId: $("#selectedClass").val()
        }
        console.log(formData);
        $.ajax({
            type: "POST",
            data: formData,
            url: '@Url.Action("AjaxUpdate", "Courses")',
            success: function (response) {
                if (response == true) {
                    $.notify("Course Updated Successfully", "success");
                    $("#courseEditModal").modal("hide");
                    location.reload();
                }
                else $.notify("Sorry some error occurred");

            },
            error: function (e) {
                $.notify(e.message);
            }
        })

    })
</script>