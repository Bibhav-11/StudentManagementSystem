@{
}

@model IEnumerable<SMSClient.Model.Department>

<div style="margin-top: 10px">

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Short Name
                </th>
                <th>
                    Long Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Status
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.ShortName
                    </td>
                    <td>
                        @obj.LongName
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Phone
                    </td>
                    @if ((obj.IsActive.HasValue && !obj.IsActive.Value) || !obj.IsActive.HasValue)
                    {
                        <td>
                            Not Active
                        </td>
                    }
                    else
                    {
                        <td>
                            Active
                        </td>
                    }
                    <td>
                        <div class="w-75 d-flex" role="group">
                            <button id="@obj.Id" onclick="showEditDepartmentModal(this.id);" asp-accesslevel="@AccessLevels.Edit" asp-module="@Modules.Department" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</button>
                            @if ((obj.IsActive.HasValue && !obj.IsActive.Value) || !obj.IsActive.HasValue)
                            {
                                <button asp-accesslevel="@AccessLevels.Delete" asp-module="@Modules.User" id="@obj.Id" onclick="activateDepartment(this.id)" class="btn btn-success mx-2">Activate</button>
                            }
                            else
                            {
                                <button asp-accesslevel="@AccessLevels.Delete" asp-module="@Modules.User" id="@obj.Id" onclick="deactivateDepartment(this.id)" class="btn btn-danger mx-2">Deactivate</button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>