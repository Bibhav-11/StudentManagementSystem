@using Microsoft.AspNetCore.Identity;
@using SMSClient.Constants;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model List<IdentityRole>

<h2 style="font-weight: 600">Roles</h2>

<div asp-accesslevel="@AccessLevels.Create" asp-module="@Modules.Role" style="display: flex; justify-content: end">


@(Html.DevExtreme().Button()
                        .Text("Add New Role")
                        .Type(ButtonType.Success)
                        .OnClick("notify")
                    )
</div>



<div style="margin-top: 10px">
  
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Role Name
                </th>
                <th>
                    Role Id
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.Id
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-accesslevel="@AccessLevels.Edit" asp-module="@Modules.Role" asp-controller="Roles" asp-action="Edit" asp-route-roleId="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-accesslevel="@AccessLevels.Delete" asp-module="@Modules.Role" asp-controller="Roles" asp-action="DeleteRole" asp-route-roleId="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>



<script>
    function notify() {
        window.location.href = "@Url.Action("Create", "Roles")";
    }
</script>