@{
}

@model IEnumerable<SMSClient.Model.Teacher>

<h2>Teachers</h2>
<div asp-accesslevel="@AccessLevels.Create" asp-module="@Modules.Teacher" style="display: flex; justify-content: end; margin-bottom: 20px">
    @Html.DevExtreme().Button().Text("Create a Teacher").OnClick("openAddTeacherModal")
</div>

<div style="margin-top: 10px">

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Class
                </th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.FirstName
                    </td>
                    <td>
                        @obj.LastName
                    </td>
                    <td>
                        @obj.Phone
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @if (@obj.Class is null) { }
                        else
                            @obj.Class.Name

                        </td>

                    <td>
                        <div class="w-75 d-flex" role="group">
                            <button asp-accesslevel="@AccessLevels.Edit" asp-module="@Modules.Teacher" id="@obj.Id" onclick="openEditTeacherModal(this.id)" class="btn btn-primary mx-2">Edit</button>
                            <button asp-accesslevel="@AccessLevels.Delete" asp-module="@Modules.Teacher" id="@obj.Id" onclick="openDeleteTeacherModal(this.id)" class="btn btn-danger mx-2"> Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
<div id="addTeacherModalContainer"></div>
<div id="editTeacherModalContainer"></div>
<div id="deleteTeacherModalContainer"></div>

<script>
    function openAddTeacherModal() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("ShowAddPage", "Teachers")',
            success: function (response) {
                $("#addTeacherModalContainer").html(response);
                $("#addTeacherModal").modal("show");
            }
        })
    }


    function openEditTeacherModal(id) {
        $.ajax({
            type: "GET",
            data: { id: id },
            url: '@Url.Action("ShowEditPage", "Teachers")',
            success: function (response) {
                $("#editTeacherModalContainer").html(response);
                $("#editTeacherModal").modal("show");
            }
        })
    }

    function openDeleteTeacherModal(id) {
        $.ajax({
            type: "GET",
            data: { id: id },
            url: '@Url.Action("ShowDeletePage", "Teachers")',
            success: function (response) {
                $("#deleteTeacherModalContainer").html(response);
                $("#deleteTeacherModal").modal("show");
            }
        })
    }
</script>